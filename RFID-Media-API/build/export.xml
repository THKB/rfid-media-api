<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="export">

	<import file="build-javadoc.xml" as="build-javadoc" />
	<import file="build-java.xml" as="build-java" />

	<target name="export" depends="build-java.build">

		<mkdir dir="../export" />

		<jar jarfile="../export/rfid-media-api-doc.jar" basedir="../doc" />

		<jar jarfile="../export/rfid-media-api-src.jar" basedir="../src" includes="**/*.java" />

		<jar jarfile="../export/rfid-media-api.jar" basedir="../bin" includes="**/*.class" />

		<jar jarfile="../export/lib/obidisc4j-doc.jar" basedir="../lib/feig_id_isc/doc/javadoc" />

		<copy file="../lib/feig_id_isc/OBIDISC4J.jar" tofile="../export/lib/obidisc4j.jar" />

		<copy todir="../export/lib/bin">
			<fileset dir="../lib/feig_id_isc/bin" />
		</copy>

		<property name="version.num" value="1.2" />
		<buildnumber file="build.num" />

		<manifest file="../export/rfid-media-api-MANIFEST.MF">
			<attribute name="Built-By" value="${user.name}" />
			<attribute name="api-Version" value="${version.num}.${build.number}" />
		</manifest>
	</target>
	<target name="cleanup">
		<delete>
			<fileset dir="." includes="**/*.class" />
			<fileset file="rfid-media-api-MANIFEST.MF" />
		</delete>
	</target>
</project>